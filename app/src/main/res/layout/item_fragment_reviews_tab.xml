<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">



            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_alignParentLeft="true"
                android:stepSize="0.01"
                android:isIndicator="true"
                style= "@style/CustomRatingBar"
                android:scaleX=".5"
                android:scaleY=".5"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:layout_marginBottom="-26dp"
                android:layout_marginRight="-45dp"

                />

            <TextView
                android:id="@+id/textViewReviewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 نوفمبر 2018"
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentLeft="true"
                android:singleLine="false"

                />

            <TextView
                android:id="@+id/TextViewCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بسيمه هيكل"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/textViewCustomerReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عروض ممتازه و اكثر من رائع ف التوصيل ف الوقت "
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewReviewTime"
                android:singleLine="false"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>