<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:cardBackgroundColor="#dcdcdc"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageViewRestaurant"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:padding="4dp"
                android:src="@mipmap/alarm" />

            <TextView
                android:id="@+id/textViewAlarmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/imageViewRestaurant"
                android:text="عنوان التنبيه يظهر هنا"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButtonCalender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/calender"
                android:layout_toLeftOf="@+id/imageViewRestaurant"
                android:layout_below="@+id/textViewAlarmName"
                />

            <TextView
                android:id="@+id/textViewAlarmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewAlarmName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/imageButtonCalender"
                android:text="السبت 1 يناير 2018"
                android:textColor="#6e6e6e"
                android:textSize="12sp"
                />

            <ImageButton
                android:id="@+id/imageButtonWatch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/watch"
                android:layout_below="@+id/textViewAlarmName"
                android:layout_toLeftOf="@+id/textViewAlarmDate"

                />

            <TextView
                android:id="@+id/textViewAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewAlarmName"
                android:layout_marginTop="5dp"
                android:text="6:30 مساء"
                android:textColor="#6e6e6e"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/imageButtonWatch"

                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>