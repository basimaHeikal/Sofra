<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/main_content"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearAvailability"
        style="@style/VerticalThemeLayoutInputs"
        >
        <TextView
            android:id="@+id/textViewAvailability"
            android:text="الحاله"
            android:layout_weight=".5"
            style="@style/Info_TextViewStyle1"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />
        <TextView
            android:id="@+id/textViewAvailabilityValue"
            android:text="مفتوح"
            style="@style/Info_TextViewStyle"
            android:textColor="#024601"
            />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/linearAvailability"
        style="@style/Info_ViewStyle" />
    <LinearLayout
        android:id="@+id/linearCity"
        style="@style/VerticalThemeLayoutInputs"
        android:layout_below="@+id/view1">
        <TextView
            android:id="@+id/textViewCity"
            android:text="المدينه"
            android:layout_weight=".5"
            style="@style/Info_TextViewStyle1" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:visibility="invisible" />
        <EditText
            android:id="@+id/textViewCityValue"
            android:text="الرياض"
            style="@style/Info_TextViewStyle2"
            android:background="#0000"
            />
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/linearCity"
        style="@style/Info_ViewStyle" />
    <LinearLayout
        android:id="@+id/linearRegion"
        style="@style/VerticalThemeLayoutInputs"
        android:layout_below="@+id/view2">
        <TextView
            android:id="@+id/textViewRegion"
            android:text="الحي"
            android:layout_weight=".5"
            style="@style/Info_TextViewStyle1" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
        <EditText
            android:id="@+id/textViewRegionValue"
            android:text="الروضه"
            style="@style/Info_TextViewStyle2"
            android:background="#0000"
            />
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/linearRegion"
        style="@style/Info_ViewStyle" />
    <LinearLayout
        android:id="@+id/linearMinimumCharger"
        style="@style/VerticalThemeLayoutInputs"
        android:layout_below="@+id/view3">
        <TextView
            android:id="@+id/textViewMinimumCharger"
            android:text="الحد الأدنى"
            android:layout_weight=".3"
            style="@style/Info_TextViewStyle1" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
        <EditText
            android:id="@+id/textViewMinimumChargerValue"
            android:text="50"
            style="@style/Info_TextViewStyle2"
            android:background="#0000"
            />
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/linearMinimumCharger"
        style="@style/Info_ViewStyle" />
    <LinearLayout
        android:id="@+id/linearDeliveryCost"
        style="@style/VerticalThemeLayoutInputs"
        android:layout_below="@+id/view4">
        <TextView
            android:id="@+id/textViewDeliveryCost"
            android:text="رسوم التوصيل"
            android:layout_weight=".2"
            style="@style/Info_TextViewStyle1" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
        <EditText
            android:id="@+id/textViewDeliveryCostValue"
            android:text="50"
            style="@style/Info_TextViewStyle2"
            android:background="#0000"
            />
    </LinearLayout>
    <View
        android:id="@+id/view5"
        android:layout_below="@+id/linearDeliveryCost"
        style="@style/Info_ViewStyle"
        />

    <Button
        android:id="@+id/buttonEditRestaurant"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textColor="#FFF"
        android:text="تسجيل"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/MyButton2"
        android:layout_below="@+id/view5" />
</RelativeLayout>
</ScrollView>